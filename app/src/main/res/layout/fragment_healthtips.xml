<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#0B7C8F"
    tools:context=".ui.health_tips.HealthTipsFragment">

    <ImageView
        android:id="@+id/maskImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:src="@drawable/mask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthTips" />

    <ImageView
        android:id="@+id/handImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:src="@drawable/washing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthTips" />

    <ImageView
        android:id="@+id/healthTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/menu_healthTips"
        android:src="@drawable/capture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/protectImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/p"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maskImage" />

    <ImageView
        android:id="@+id/testImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:src="@drawable/tested"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/handImage" />

    <Button
        android:id="@+id/maskButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00FFFFFF"
        android:text="  "
        app:layout_constraintStart_toStartOf="@+id/maskImage"
        app:layout_constraintTop_toTopOf="@+id/maskImage" />

    <Button
        android:id="@+id/handButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00FFFFFF"
        android:text="  "
        app:layout_constraintEnd_toEndOf="@+id/handImage"
        app:layout_constraintTop_toTopOf="@+id/handImage" />

    <Button
        android:id="@+id/protectButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00FFFFFF"
        android:text="  "
        app:layout_constraintStart_toStartOf="@+id/protectImage"
        app:layout_constraintTop_toTopOf="@+id/protectImage" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#00FFFFFF"
        android:text="  "
        app:layout_constraintEnd_toEndOf="@+id/testImage"
        app:layout_constraintTop_toTopOf="@+id/testImage" />

</androidx.constraintlayout.widget.ConstraintLayout>